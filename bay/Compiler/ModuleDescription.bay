namespace BayLang.Compiler;

use Runtime.Entity.Provider;
use Runtime.Console.Annotations.ConsoleCommand;
use BayLang.ModuleDescription as BayLangModuleDescription;


static class ModuleDescription
{
	/**
	 * Returns module name
	 * @return string
	 */
	pure string getModuleName() => "BayLang.Compiler";
	
	
	/**
	 * Returns module name
	 * @return string
	 */
	pure string getModuleVersion() => BayLangModuleDescription::getModuleVersion();
	
	
	/**
	 * Returns required modules
	 * @return Map<string>
	 */
	pure Map<string> requiredModules() =>
	{
		'BayLang': '*',
		'BayLang.Test': '*',
		'Runtime.Unit': '*',
	};
	
	
	/**
	 * Returns enities
	 */
	pure Collection<Dict> entities() => 
	[
		new ConsoleCommand("BayLang.Compiler.Commands.Make"),
		new ConsoleCommand("BayLang.Compiler.Commands.MakeAll"),
		new ConsoleCommand("BayLang.Compiler.Commands.Modules"),
		new ConsoleCommand("BayLang.Compiler.Commands.Version"),
		new ConsoleCommand("BayLang.Compiler.Commands.Watch"),
		new Provider("BayLang.Compiler.SettingsProvider"),
	];
}
